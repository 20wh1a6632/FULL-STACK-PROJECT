        }
    
        .header .navbar a{
            display: block;
            background:#f7f7f7;
            padding:1.5rem;
            margin:1.5rem;
            border-radius: .5rem;
            border:var(--border);
        }
    
        .container{
            grid-template-columns: 1fr;
            gap:0;
        }
    
        .container .posts-container .post .image{
            height: 30rem;;
        }
    
        .footer{
            flex-flow: column;
            text-align: center;
        }
    
    }
    
    @media (max-width:450px){
    
        html{
            font-size: 50%;
        }
    
